{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "bf-click-counter/click-counter",
	"version": "0.1.0",
	"title": "Click Counter",
	"category": "widgets",
	"description": "Simple click counter block",
	"supports": {
		"html": false,
		"color": {
			"__experimentalSkipSerialization": true,
			"gradients": false,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"typography": {
			"fontSize": true
		},
		"spacing": {
			"margin": true
		}		
	},
	"attributes": {
		"counterKey": {
			"type": "string"
		},
		"counterLabel": {
			"type": "string",
			"default": "Like! (%count%)"
		},
		"paddingValues": {
			"type": "object",
			"default": {
				"top": "10px",
				"left": "10px",
				"bottom": "10px",
				"right": "10px"
			}
		},
		"borderRadius": {
			"type": "number",
			"default": 4
		},
		"buttonAlign": {
			"type": "string",
			"default": "left"
		},
		"borderWidth": {
			"type": "number",
			"default": 1		
		},
		"borderColor": {
			"type": "string",
			"default": "#008"
		},
		"ipCountPrevention": {
			"type": "boolean",
			"default": true
		},		
		"style": {
			"type": "object",
			"default": {
				"color": {
					"background": "#fff",
					"text": "#008"
				}
			}
		}		
	},
	"textdomain": "bf-click-counter",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./style-index.css",
	"style": "file:./style-index.css"
}